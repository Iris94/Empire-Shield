---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-screen h-screen overflow-hidden fantasyFont">
		<slot />
	</body>
</html>


<style is:global>

@font-face {
        font-family: 'fantasy';
        src: url('../../static/fonts/fantasy.otf') format('truetype');
    }

    .fantasyFont {
        font-family: 'fantasy', sans-serif;
    }
</style>
