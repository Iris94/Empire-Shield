---
const {
    playerClass,
    playerImage,
    playerHP,
    playerMana,
    playerAttack,
    playerPoints

} = Astro.props;

import Icon from "astro-icon";
import { Image } from "astro:assets";
---

<div class={`w-1/4 h-full flex flex-col player-card-css 
justify-evenly items-center p-2 hover:scale-110
${playerClass === 'Knight' ? 'knightEffect' : ''} 
${playerClass === 'Mage' ? 'mageEffect' : ''} 
${playerClass === 'Assassin' ? 'assassinEffect' : ''}`}>


    <div class="w-2/3 flex justify-center items-center inside-card-css">
        <h5 class="text-white opacity-85 text-sm"> {playerClass} </h5>
    </div>

    <div class="w-full flex justify-center items-center p-2">
        <div class="w-5/6 h-full flex justify-center items-center inside-card-css">
            <Image 
            src={playerImage}
            alt="image for player class"
            class="rounded-md"
            />
        </div>
    </div>

    <div class="w-full h-fit flex flex-col gap-1 p-2 inside-card-css">
        <div class="flex gap-2 h-6 items-center justify-center p-2">
            <div class="w-1/6 text-red-800">
                <Icon name="mdi:heart" class="w-6"/>
            </div>
            <div class="w-4/6">
               <hr class="w-full h-1 bg-red-800 border-none"> 
            </div>
            <div class="w-1/6 text-white">
                <p> {playerHP} </p>
            </div>
        </div>

        <div class="flex gap-1 h-6 items-center justify-center p-2">
            <div class="w-1/6 text-blue-800">
                <Icon name="ph:fire-fill" class="w-6"/>
            </div>
            <div class="w-4/6">
               <hr class="w-full h-1 bg-blue-800 border-none"> 
            </div>
            <div class="w-1/6 text-white">
                <p> {playerMana} </p>
            </div>
        </div>

        <div class="flex gap-1 h-6 items-center justify-center p-2">
            <div class="w-1/6 text-yellow-800">
                <Icon name="charm:sword" class="w-6"/>
            </div>
            <div class="w-4/6">
               <hr class="w-full h-1 bg-yellow-800 border-none"> 
            </div>
            <div class="w-1/6 text-white">
                <p> {playerAttack} </p>
            </div>
        </div>

        <div class="flex gap-1 h-6 items-center justify-center p-2">
            <div class="w-1/6 text-green-800">
                <Icon name="mdi:sword-fight" class="w-6"/>
            </div>
            <div class="w-4/6">
               <hr class="w-full h-1 bg-green-800 border-none"> 
            </div>
            <div class="w-1/6 text-white">
                <p> {playerPoints} </p>
            </div>
        </div>

    </div>
</div>



<style>
    .player-card-css {
        border: 0.1rem double #120b06;
        background: radial-gradient(ellipse at 74% 40%, rgba(56, 77, 89, 1) 29%, rgba(9, 9, 13, 1) 90%);

        box-shadow: 
        inset 5px 5px 20px black,
        5px 5px 15px black,
        5px 5px 35px black;
    }

    .inside-card-css {
        border: 0.1rem solid #120b06;
        background: linear-gradient(270deg, rgba(31, 42, 49, 1) 0%, rgba(0, 0, 0, 1) 100%);

        box-shadow: 
        inset 5px 5px 20px black,
        5px 5px 15px black,
        5px 5px 35px black;
    }

    .knightEffect:hover,
    .mageEffect:hover,
    .assassinEffect:hover {
        animation: 15s infinite var(--player-animation);
        border: none;
        transition: transform 0.2s ease-in;
    }

    .knightEffect:hover {
    --player-animation: knightAnimation;
    }

    .mageEffect:hover {
    --player-animation: mageAnimation;
    }

    .assassinEffect:hover {
    --player-animation: assassinAnimation;
    }


    @keyframes knightAnimation {
        0%, 50% {
        box-shadow: 
        0 0 20px white,
        0 0 80px rgb(127, 122, 92),
        0 0 150px rgb(152, 149, 129),
        0 0 250px rgb(194, 95, 3),
        inset 0 0 250px rgb(235, 235, 234);

	}   25%, 100% {
        box-shadow: 
        0 0 50px white,
        0 0 100px rgb(130, 111, 4),
        0 0 200px rgb(165, 142, 10),
        0 0 400px gold,
        inset 0 0 400px goldenrod;

	}  
    }

    @keyframes mageAnimation {
        0%, 100% {
            box-shadow: 
            0 0 100px black,
            0 0 200px rgb(60, 1, 1),
            0 0 40px rgb(139, 1, 1),
            0 0 60px rgb(146, 1, 1),
            inset 0 0 40px rgb(218, 1, 1);
        }  50% {
            border-top-right-radius: 25%;
            box-shadow: 
            0 0 100px black,
            0 0 200px rgb(60, 1, 1),
            0 0 400px rgb(139, 1, 1),
            0 0 600px rgb(146, 1, 1),
            inset 0 0 250px rgb(0, 0, 0);
        }
    }

    @keyframes assassinAnimation {
        0%, 100% {
            box-shadow: 
            0 0 10px black,
            0 0 20px black,
            0 0 30px rgb(48, 1, 66),
            0 0 40px rgb(66, 1, 90),
            inset 0 0 30px rgb(26, 0, 54);
        }  50% {
            box-shadow: 
            0 0 90px black,
            0 0 150px black,
            0 0 200px rgb(48, 1, 66),
            0 0 250px rgb(66, 1, 90),
            inset 0 0 250px rgb(26, 0, 54);
        }
    }
</style>

