---
import Layout from "../layouts/Layout.astro";
import SelectCharacters from '../components/characterSelectionComp/selectChar/SelectCharacter.astro';
import AboutCharacter from '../components/characterSelectionComp/aboutChar/AboutCharacter.astro';
---

<Layout title="Character Selection">
	<main 
	class="main-background w-full h-full z-0 
	flex items-center lg:items-start 
	justify-center p-9 lg:gap-8">
		<SelectCharacters />
		<AboutCharacter />
	</main>
</Layout> 


<style>
	.main-background {
	  background-image: url('../assets/menu.jpg');
	  background-size: cover; /* Adjust as needed */
	  /* You can add more CSS properties to style the background image here */
	}

    .main-background::before {
	content: '';
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background: rgba(0, 0, 47, 0.4); /* Dark blue overlay (adjust as needed) */
	z-index: 1; /* Position the overlay above the background image */
	}
</style>